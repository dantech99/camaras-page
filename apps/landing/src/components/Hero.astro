---
import gsap from "gsap";
---

<div class="h-screen flex items-end p-8">
  <div class="space-y-4">
    <h1 class="text-lg font-unbounded font-semibold heading">
      Las Cámaras del Dragón
    </h1>

    <h2
      class="flex flex-col text-4xl md:text-6xl font-unbounded font-semibold text-primary-blue main-line"
    >
      <span>CONOCE A NUESTRO GRAN</span>
      <span>EQUIPO DE</span>
      <span>TRABAJO</span>
    </h2>

    <div class="flex flex-col gap-2 md:flex-row md:gap-18 max-w-1/2 paragraphs">
      <p class="text-lg font-unbounded font-semibold text-primary-blue/70">
        NOS ENFOCAMOS EN BRINDAR EL MEJOR SERVICIO QUE ALGUNA VEZ PUDISTE PROBAR
      </p>
      <p class="text-lg font-semibold">
        TENEMOS A LOS MEJORES FOTOGRAFOS Y MUCHAS OTRAS AREAS EN LAS CUALES TE
        PODEMOS CUBRIR GRAFICAMENTE
      </p>
    </div>
  </div>
</div>

<script>
  import { gsap } from "gsap";

  const tl = gsap.timeline({ defaults: { ease: "power2.out" } });

  tl.from(".heading", {
    y: 50,
    opacity: 0,
    duration: 0.6,
  })
    .from(
      ".main-line span",
      {
        y: 80,
        opacity: 0,
        stagger: 0.1,
        duration: 1,
      },
      "-=0.5"
    )
    .from(
      ".paragraphs p",
      {
        x: -50,
        opacity: 0,
        stagger: 0.2,
        duration: 0.8,
      },
      "-=0.5"
    );
</script>
