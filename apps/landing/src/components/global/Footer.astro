---
import FacebookIcon from "public/icons/FacebookIcon.astro";
import InstagramIcon from "public/icons/InstagramIcon.astro";
import TikTokIcon from "public/icons/TikTokIcon.astro";
import DiscordIcon from "public/icons/DiscordIcon.astro";


interface NavSection {
  title: string
  links: { name: string; href: string }[]
}

interface SocialIcon {
  name: string
  icon: any
  href: string
}

const navSections: NavSection[] = [
  {
    title: "Servicios",
    links: [
      { name: "TALENT POOL", href: "#" },
      { name: "CONFERENCES", href: "#" },
      { name: "ONLINE COURSES", href: "#" },
    ],
  },
  {
    title: "Compañía",
    links: [
      { name: "BLOG", href: "#" },
      { name: "FAQ", href: "#" },
      { name: "CONTACT", href: "#" },
    ],
  },
  {
    title: "Legal",
    links: [
      { name: "Política de Privacidad", href: "#" },
      { name: "Términos de Servicio", href: "#" },
    ],
  },
]

const socialIcons: SocialIcon[] = [
  { name: "Facebook", icon: FacebookIcon, href: "#" },
  { name: "Instagram", icon: InstagramIcon, href: "#" },
  { name: "TikTok", icon: TikTokIcon, href: "#" },
  { name: "Discord", icon: DiscordIcon, href: "#" },
]
---

<footer class="w-full py-12 px-6 bg-transparent border-t border-gray-200 dark:border-gray-800">
  <div class="container mx-auto">
    <!-- Logo and tagline -->
    <div class="flex flex-col items-center mb-10">
      <h2 class="text-black dark:text-white text-4xl md:text-5xl font-unbounded font-bold tracking-tighter text-center text-lg font-unbounded font-semibold text-primary-blue/70">
        <span>LAS CÁMARAS DEL DRAGÓN</span>
      </h2>
      <p class="mt-3 text-white text-center max-w-md font-unbounded">
        Descubre tu potencial y construye tu legado con nosotros
      </p>
    </div>

    <!-- Links section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      {navSections.map((section) => (
        <div class="flex flex-col items-center md:items-start">
          <h3 class="font-semibold font-unbounded text-white dark:text-white mb-4 text-lg">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="font-unbounded text-gray-600 dark:text-gray-400 hover:text-gray-50 dark:hover:text-white transition-colors"
                  target="_blank"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom section with social icons and copyright -->
    <div class="text-center pt-8 border-t border-gray-200 dark:border-gray-800">
      <div class="flex justify-center mb-6">
        <div class="grid grid-flow-col gap-6">
          {socialIcons.map((social) => (
            <a
              href={social.href}
              class="w-10 h-10 rounded-full flex items-center justify-center border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
              aria-label={social.name}
            >
              <social.icon class="w-5 h-5 text-black dark:text-white" />
            </a>
          ))}
        </div>
      </div>

      <p class="font-unbounded text-gray-600 dark:text-gray-400 text-sm">
        © {new Date().getFullYear()} Las Cámaras del Dragón. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>


